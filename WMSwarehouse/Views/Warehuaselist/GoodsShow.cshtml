
@{
    ViewData["Title"] = "GoodsShow";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="//res.layui.com/layui/dist/css/layui.css" media="all">
    <link href="~/layui-v2.5.6/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="demoTable">
        仓库:
        <div class="layui-inline">
            <select name="WarehouseName" id="WarehouseName" lay-verify="">
                <option value="">--请选择--</option>
                <option value="A仓">A仓</option>
                <option value="B仓">B仓</option>
            </select>
        </div>
        库区名称:
        <div class="layui-inline">
            <input class="layui-input" id="Rsesrvoirare">
        </div>
        <button class="layui-btn" data-type="reload" id="chaxun">搜索</button>
        <button class="layui-btn" data-type="reload" onclick="location.href = '/Warehuaselist/AddReservoir'">添加库区</button>
    </div>

    <table class="layui-hide" id="demo" lay-filter="test"></table>

    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">添加货位</a>
    </script>
    <script src="~/layui-v2.5.6/layui/layui.js" charset="utf-8"></script>
    <script>
        layui.use('table', function () {
            var table = layui.table;
            //执行一个 table 实例
            table.render({
                elem: '#demo'
                , url: 'http://localhost:52098/api/GetGoods' //数据接口
                , title: '库区管理'
                , page: true //开启分页
                , limit: 10 //开启合计行
                , limits: [10, 20]
                , id: 'idTest'
                , cols: [[ //表头
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'id', title: 'ID', width: 340 }
                    , { field: 'WarehouseName', title: '所属仓库', width: 340 }
                    , { field: 'Rsesrvoirare', title: '库区名称', width: 340 }
                    , { field: 'WName', title: '所属温区', width: 340, sort: true }
                    , { fixed: 'right', width: 190, align: 'center', toolbar: '#barDemo' }
                ]]
            });
            //监听工具条
            table.on('tool(demo)', function (obj) {
                var data = obj.data;
                if (obj.event === 'detail') {
                    layer.msg('ID：' + data.id + ' 的查看操作');
                } else if (obj.event === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        obj.del();
                        layer.close(index);
                    });
                } else if (obj.event === 'edit') {
                    layer.alert('编辑行：<br>' + JSON.stringify(data))
                }
            });

            var $ = layui.$, active = {
                reload: function () {
                    var WarehouseName = $('#WarehouseName');
                    var Rsesrvoirare = $('#Rsesrvoirare');
                    //执行重载
                    table.reload('idTest', {
                        page: {
                            curr: 1 //重新从第 1 页开始
                        }, where: {
                            WarehouseName: WarehouseName.val(),
                            Rsesrvoirare: Rsesrvoirare.val()
                        }
                    });
                }
            };
            $('.demoTable .layui-btn').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });
        });  
    </script>
</body>
</html>

