
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h1>报损申请</h1>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/layui-v2.5.6/layui/css/layui.css" rel="stylesheet" />
    <link rel="stylesheet" href="//res.layui.com/layui/dist/css/layui.css" media="all">
    <!-- 注意：如果你直接复制所有代码到本地，上述css路径需要改成你本地的 -->
</head>
<body>

    <table class="layui-table">
        <tr>
            <td>报损</td>
            <td>
                <select id="txtKu">
                    <option value="">请选择</option>
                    <option value="">请选择</option>
                    <option value="">请选择省</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>温区</td>
            <td>
                <select name="quiz1">
                    <option value="">请选择省</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>物料类型</td>
            <td>
                <input type="radio" id="Radio1" name="sex" value="产品" title="产品" checked="">
                <input type="radio" id="Radio1" name="sex" value="商品" title="商品">
            </td>
        </tr>
        <tr>
            <td>物料编码</td>
            <td>
                <input type="text" id="bian" />
            </td>
        </tr>
        <tr>
            <td>物料名称</td>
            <td>
                <input type="text" id="mingchen" />
            </td>
        </tr>
        <tr>
            <td>批次号</td>
            <td>
                <input type="text" id="picihao" />
            </td>
        </tr>
        <tr>
            <td>规格型号</td>
            <td>
                <input type="text" id="ggh" />
            </td>
        </tr>
        <tr>
            <td>可以量</td>
            <td>
                <input type="text" id="keyilian" />
            </td>
        </tr>
        <tr>
            <td>报损数量</td>
            <td>
                <input type="text" id="Num" />
            </td>
        </tr>
        <tr>
            <td>报损原因</td>
            <td>
                <input type="text" id="yuangyi" />
            </td>
        </tr>
        <tr>
            <td><input type="button" value="添加" onclick="location.href='/FrmLoss/Show'" id="Addc" /></td>
            <td><button type="reset" class="layui-btn layui-btn-primary">重置</button></td>
        </tr>
    </table>
    <script src="~/layui-v2.5.6/layui/layui.js"></script>
    <script>
        $.ajax({
            url: 'http://localhost:52098/api/ReserAsync',
            type: 'get',
            dataType: 'json',
            success: function (d) {
                $.each(d, function (index, item) {
                    $("#txtKu").val(item.WarehouseName);
                })
            }
        })

        function Add() {
            var Warehouse = {
                "SuperiorWarehouse": $("#SuperiorWarehouse").val(),
                "WarehouseName": $("#WarehouseName").val(),
                "WarehouseCode": $("#WarehouseCode").val(),
                "Arrangr": $("#Arrangr").val,
                "WarehuoseAddress": $("#s_province").val() + $("#s_city").val() + $("#s_county").val(),
                "DetailedAddress": $("#DetailedAddress").val(),
                "WarehouseEntities": $("#WarehouseEntities").val(),
                "State": $("#State").val()
            };
            $.ajax({
                url: 'http://localhost:52098/api/Add',
                data: JSON.stringify(Warehouse),
                type: 'get',
                dataType: "json",
                contentType: "application/json",
                success: function (data) {
                    if (data > 0) {
                        alert("添加成功");

                    }
                    else {
                        alert("添加失败");
                    }
                }
            })
    </script>

</body>
</html>